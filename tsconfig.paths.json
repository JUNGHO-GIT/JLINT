{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@scripts/*": ["src/assets/scripts/*"],
      "@components/*": ["src/components/*"],
			"@core/*": ["src/core/*"],
			"@langs/*": ["src/langs/*"],
			"@utils/*": ["src/utils/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/assets/types"
    ],
    "types": [
      "lib",
    	"node",
      "alias",
      "extension"
    ]
  },
  "include": [
    "src/**/*",
    "src/index.tsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
		"node_modules",
		"out",
		"dist",
		".vscode-test"
	]
}