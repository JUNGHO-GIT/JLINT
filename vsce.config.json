{
  "external": [
    "vscode",
    "prettier",
    "prettier-plugin-java",
    "prettier-plugin-jsp",
    "@prettier/plugin-xml",
    "sql-formatter"
  ],
  "copyPackages": [
    "prettier",
    "prettier-plugin-java",
    "prettier-plugin-jsp",
    "@prettier/plugin-xml",
    "@xml-tools/parser",
    "sql-formatter",
    "java-parser",
    "chevrotain"
  ],
  "esbuildOptions": {
    "tree-shaking": true,
    "target": "node21",
    "legal-comments": "none"
  },
  "vsceOptions": {
    "no-dependencies": true
  }
}
