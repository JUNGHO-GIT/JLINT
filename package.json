{
	"name": "JLINT",
	"displayName": "JLINT",
	"publisher": "JUNGHO",
	"icon": "logo.webp",
	"version": "1.8.0",
	"license": "Apache-2.0",
	"description": "Universal Language formatter",
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/JUNGHO-GIT/JLINT.git"
	},
	"engines": {
		"vscode": "^1.103.0",
		"node": ">=21.0.0",
		"npm": ">=10.0.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"categories": [
		"Formatters",
		"Linters",
		"Programming Languages",
		"Snippets",
		"Language Packs",
		"Extension Packs",
		"Debuggers",
		"Other"
	],
	"contributes": {
		"menus": {
			"commandPalette": [
				{
					"command": "extension.JLINT",
					"when": "editorTextFocus"
				}
			],
			"editor/context": [
				{
					"command": "extension.JLINT",
					"when": "editorTextFocus"
				}
			]
		},
		"commands": [
			{
				"command": "extension.JLINT",
				"title": "JLINT"
			}
		],
		"keybindings": [
			{
				"command": "extension.JLINT",
				"key": "alt+shift+f",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"order": 0,
			"title": "JLINT",
			"properties": {
				"JLINT.ActivateLint": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable the lint",
					"scope": "resource"
				},
				"JLINT.RemoveComments": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable the remove comments",
					"scope": "resource"
				},
				"JLINT.InsertLine": {
					"type": "boolean",
					"default": false,
					"description": "Enable or disable the insert 'vertical line'",
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"watch": "tsc -watch -p .",
		"compile": "tsc -p .",
		"vsce": "tsc -p . && vsce package",
		"gcloud-deploy": "node .node/gcloud.cjs --full-deploy",
		"npm-reset": "pwsh -NoProfile -Command \"try { Stop-Process -Name node -Force -ErrorAction SilentlyContinue } catch {}; Start-Sleep -Milliseconds 200; if (Test-Path 'node_modules') { cmd /c 'rd /s /q \"node_modules\"' } ; if (Test-Path 'package-lock.json') { cmd /c 'del /f /q \"package-lock.json\"' } ; npm install\""
	},
	"dependencies": {
		"@babel/core": "^7.28.4",
		"@prettier/plugin-xml": "^3.4.2",
		"astring": "^1.9.0",
		"cheerio": "^1.1.2",
		"chevrotain": "^11.0.3",
		"clean-css": "^5.3.3",
		"fast-xml-parser": "^5.2.5",
		"glob": "^11.0.3",
		"html-minifier-terser": "^7.2.0",
		"jsdom": "^27.0.0",
		"lodash": "^4.17.21",
		"minimatch": "^10.0.3",
		"postcss": "^8.5.6",
		"prettier": "3.6.2",
		"sql-formatter": "^15.6.9",
		"strip-comments": "^2.0.1",
		"strip-json-comments": "^5.0.3",
		"terser": "^5.44.0",
		"yaml": "^2.8.1"
	},
	"devDependencies": {
		"@types/clean-css": "^4.2.11",
		"@types/glob": "^9.0.0",
		"@types/html-minifier-terser": "^7.0.2",
		"@types/jsdom": "^21.1.7",
		"@types/lodash": "^4.17.20",
		"@types/minimatch": "^6.0.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.5.1",
		"@types/prettier": "^3.0.0",
		"@types/strip-comments": "^2.0.4",
		"@types/strip-json-comments": "^3.0.0",
		"@types/vscode": "1.103.0",
		"@types/yaml": "^1.9.7",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.0",
		"eslint": "^9.35.0",
		"mocha": "^11.7.2",
		"prettier-plugin-java": "2.7.5",
		"prettier-plugin-jsp": "^1.0.13",
		"prettier-plugin-xml": "^0.1.0",
		"typescript": "^5.9.2"
	}
}
