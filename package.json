{
  "name": "JLINT",
  "displayName": "JLINT",
  "publisher": "JUNGHO",
  "icon": "logo.webp",
  "license": "Apache-2.0",
  "version": "1.4.0",
  "description": "Universal Language formatter",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/JUNGHO-GIT/JLINT.git"
  },
  "engines": {
    "vscode": "^1.95.0",
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:extension.JLINT"
  ],
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "extension.JLINT",
          "when": "editorTextFocus"
        }
      ],
      "editor/context": [
        {
          "command": "extension.JLINT",
          "when": "editorTextFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.JLINT",
        "title": "JLINT"
      }
    ],
    "keybindings": [
      {
        "command": "extension.JLINT",
        "key": "alt+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "JLINT",
      "properties": {
        "JLINT.ActivateLint": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the lint",
          "scope": "resource"
        },
        "JLINT.RemoveComments": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the remove comments",
          "scope": "resource"
        },
        "JLINT.InsertLine": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable the insert 'Comment vertical line'",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "watch": "tsc -watch -p .",
    "compile": "tsc -p .",
    "npm-reset": "powershell -Command \"Remove-Item -Recurse -Force package-lock.json, node_modules; npm install --legacy-peer-deps;\"",
    "vsce": "vsce package",
    "push": "node push.cjs"
  },
   "dependencies": {
    "@babel/core": "^7.26.0",
    "jsdom": "^25.0.1",
    "lodash": "^4.17.21",
    "cheerio": "^1.0.0",
    "chevrotain": "^11.0.3",
    "fast-xml-parser": "^4.5.0",
    "glob": "^11.0.0",
    "minimatch": "^10.0.1",
    "strip-comments": "^2.0.1",
    "prettier": "2.7.1",
    "prettier-plugin-java": "1.6.2",
    "prettier-plugin-jsp": "^1.0.13",
    "@prettier/plugin-xml": "2.2.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.13",
    "@types/minimatch": "^3.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.9.3",
    "@types/strip-comments": "^2.0.4",
    "@types/vscode": "1.95.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.15.0",
    "mocha": "^10.8.2",
    "typescript": "^5.7.2"
  }
}
