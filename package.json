{
  "name": "jlint",
  "displayName": "Jlint",
  "publisher": "JUNGHO",
  "icon": "logo.webp",
  "version": "1.9.8",
  "license": "Apache-2.0",
  "description": "Universal Language formatter",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/JUNGHO-GIT/JLINT.git"
  },
  "engines": {
    "vscode": "^1.105.0",
    "node": ">=21.0.0",
    "npm": ">=10.0.0"
  },
  "activationEvents": [
    "onCommand:extension.Jlint"
  ],
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages",
    "Snippets",
    "Language Packs",
    "Extension Packs",
    "Debuggers",
    "Other"
  ],
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "extension.Jlint",
          "when": "editorTextFocus"
        }
      ],
      "editor/context": [
        {
          "command": "extension.Jlint",
          "when": "editorTextFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.Jlint",
        "title": "Jlint"
      }
    ],
    "keybindings": [
      {
        "command": "extension.Jlint",
        "key": "alt+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "order": 0,
      "title": "Jlint",
      "properties": {
        "Jlint.activateLint": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the lint",
          "scope": "resource"
        },
        "Jlint.removeComments": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the remove comments",
          "scope": "resource"
        },
        "Jlint.insertLine": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable the insert 'vertical line'",
          "scope": "resource"
        },
        "Jlint.tabSize": {
          "type": "number",
          "enum": [
            2,
            4
          ],
          "default": 2,
          "description": "Set the tab size for formatting (2 or 4 spaces)",
          "scope": "resource"
        },
        "Jlint.quoteType": {
          "type": "string",
          "enum": [
            "single",
            "double"
          ],
          "default": "double",
          "description": "Set the quote type for strings (single: ', double: \")",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "watch": "node .node/swc.cjs --watch",
    "compile": "node .node/swc.cjs --compile",
    "reset": "node .node/reset.cjs --pnpm",
    "gcloud": "node .node/gcloud.cjs --git",
    "autofix": "node .node/autofix.cjs --fix",
    "vsce": "node .node/vsce.cjs"
  },
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@prettier/plugin-xml": "^3.4.2",
    "@swc/helpers": "^0.5.17",
    "astring": "^1.9.0",
    "cheerio": "^1.1.2",
    "chevrotain": "^11.0.3",
    "clean-css": "^5.3.3",
    "fast-xml-parser": "^5.3.1",
    "glob": "^11.0.3",
    "html-minifier-terser": "^7.2.0",
    "jsdom": "^27.2.0",
    "lodash": "^4.17.21",
    "minimatch": "^10.1.1",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "sql-formatter": "^15.6.10",
    "strip-comments": "^2.0.1",
    "strip-json-comments": "^5.0.3",
    "terser": "^5.44.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.1",
    "@types/clean-css": "^4.2.11",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/strip-comments": "^2.0.4",
    "@types/vscode": "1.105.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "prettier-plugin-java": "2.7.7",
    "prettier-plugin-jsp": "^1.0.13",
    "ts-morph": "^27.0.2",
    "ts-prune": "^0.10.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "sideEffects": false
}
