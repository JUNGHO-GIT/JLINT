{
  "$schema": "https://www.schemastore.org/tsconfig",
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM"
    ],
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"incremental": true
	}
}