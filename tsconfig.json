{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "./bin"
  },
  "include": [
    "src/**/*"
, "src/types/prettier-plugin-java.d.ts"  ],
  "exclude": [
    "node_modules"
  ]
}