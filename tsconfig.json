{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/**/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}