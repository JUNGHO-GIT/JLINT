{
  "$schema": "https://www.schemastore.org/tsconfig",
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
		"target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM"
    ],
		"outDir": "./out",
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"incremental": true,
		"tsBuildInfoFile": "./out/.tsbuildinfo"
	}
}