{
  "$schema": "https://www.schemastore.org/tsconfig",
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
		"target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
			"DOM",
			"ESNext"
    ],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	}
}