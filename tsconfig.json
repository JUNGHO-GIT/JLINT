{
  "$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
    "baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "auto",
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": false,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "assets/types/"
    ]
	},
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
}