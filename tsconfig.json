{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "auto",
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "assets/types/"
    ]
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ]
}